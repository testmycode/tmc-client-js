{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "noEmit": false,
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
  },
  "typeAcquisition": {
    "enable": false
  },
  "exclude": ["node_modules", "dist"]
}
